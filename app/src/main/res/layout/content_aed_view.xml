<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.example.osorekoxuan.cardiactems.AEDActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:id="@android:id/list"
        android:layout_gravity="center_horizontal" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/warning_text"
        style="@style/wrapping_fa_text"
        app:bootstrapBrand="warning"
        app:bootstrapText="{fa-exclamation-triangle} Information of the AED might have error!"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/path_finding"
            android:text="Path Finding"
            android:gravity="center"
            style="@style/two_button"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:bootstrapSize="lg"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/report_error"
            android:text="Report Error"
            android:gravity="center"
            style="@style/two_button"
            app:bootstrapBrand="warning"
            app:roundedCorners="true"
            app:bootstrapSize="lg"
            />

    </LinearLayout>

</LinearLayout>
